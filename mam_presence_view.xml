	</record>
	<!--jour_type action-->
	<record model="ir.actions.act_window" id="action_jour_type">
		<field name="name">Jours Types</field>
		<field name="res_model">mam.jour_type</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
	</record>



</data>
